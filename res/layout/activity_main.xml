<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="55dp" >
    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/rdg"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal" >

        <!-- android:background 必须有 就算没有内容也必须写，否则drawable无法居中～！！！ -->

        <RadioButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/tabhome_btntop_1"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/tabhome_btntextcolor"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/interaction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/tabhome_btntop_2"
            android:gravity="center"
            android:text="商城"
            android:textColor="@color/tabhome_btntextcolor"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/tabhome_btntop_3"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@color/tabhome_btntextcolor"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/cent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/tabhome_btntop_4"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/tabhome_btntextcolor"
            android:textSize="14dp" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_above="@+id/rdg"
        android:layout_alignParentLeft="true"
        android:background="@color/lightgrey" />

</RelativeLayout>
