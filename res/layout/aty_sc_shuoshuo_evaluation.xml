<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/evaluat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_white_round"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            android:padding="0.5dp" >

            <RelativeLayout
                android:id="@+id/user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:padding="8dp" >

                <com.daguo.util.base.CircularImage
                    android:id="@+id/photo"
                    android:layout_width="50dip"
                    android:layout_height="50dip" >
                </com.daguo.util.base.CircularImage>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/photo"
                    android:paddingLeft="10dp"
                    android:text="赵云"
                    android:textColor="#697fb1"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/photo"
                    android:layout_alignLeft="@+id/name"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/sex_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_sex_man" />

                    <TextView
                        android:id="@+id/schoolname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安徽大学"
                        android:textColor="@color/green_home" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/user_info"
                android:background="@drawable/sc_shuoshuo1_content_bg1"
                android:orientation="vertical"
                android:padding="5dp" >

                <!-- 文字内容 -->

                <LinearLayout
                    android:id="@+id/text_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/content_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我发表了文字"
                        android:textColor="@color/black" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/image_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:gravity="center"
                    android:scaleType="fitStart"
                    android:src="@drawable/avatar_default" />

                <RelativeLayout
                    android:id="@+id/reply_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" >

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2小时前"
                        android:textColor="#C6C6C6" />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/date"
                        android:text="来自"
                        android:textColor="#C6C6C6" />

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv1"
                        android:text="心情"
                        android:textColor="@color/green_home" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/date"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <com.daguo.modem.photo.NoScrollGridView
                                android:id="@+id/grid"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:horizontalSpacing="5dp"
                                android:numColumns="auto_fit"
                                android:stretchMode="columnWidth"
                                android:verticalSpacing="1dp" >
                            </com.daguo.modem.photo.NoScrollGridView>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/reply_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/feed_more"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rec"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp" >

                    <TextView
                        android:id="@+id/shoucang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/sc_shuoshuo_eva_shoucang_icon"
                        android:gravity="center"
                        android:text="收藏"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/fenxiang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/sc_shuoshuo_eva_fenxiang_icon"
                        android:gravity="center"
                        android:text="分享"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/dianzan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/sc_shuoshuo_eva_dianzan_icon"
                        android:gravity="center"
                        android:text="点赞"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pinglun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/sc_shuoshuo_eva_pinglun_icon"
                        android:gravity="center"
                        android:text="评论"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/pinglunshu"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="全部评论（12）" />

                <com.daguo.util.pulllistview.XListView
                    android:background="@drawable/bg_rec"
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >
                </com.daguo.util.pulllistview.XListView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>