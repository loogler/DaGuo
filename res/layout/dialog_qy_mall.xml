<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@drawable/back_mall"    android:orientation="vertical"    android:padding="15dp" >    <TextView        android:id="@+id/tv_qyMall"        android:layout_width="match_parent"        android:layout_height="35dp"        android:gravity="center_horizontal"        android:text="商品名称"        android:textColor="#550000"        android:textSize="22dp"        android:textStyle="bold" />        <ImageView            android:id="@+id/iv_img"            android:layout_width="130dp"            android:layout_height="129dp"            android:layout_gravity="center" />     <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            android:padding="5dp" >            <TextView                android:id="@+id/tv_name"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="商品名：灯泡"                android:textColor="@color/black" />            <TextView                android:id="@+id/tv_price"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="单价：12 元"                android:textColor="@color/black" />            <TextView                android:id="@+id/tv_detail"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="介绍：这是一件商品"                android:textColor="@color/black" />        </LinearLayout>    <Button        android:id="@+id/btn_zhifu"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center_horizontal"        android:layout_marginTop="10dp"        android:background="@drawable/btn_yuanjiao"        android:padding="10dp"        android:text="确认购买"        android:textColor="@color/red" /></LinearLayout>