<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_yuanjiao"
    android:orientation="vertical"
    android:padding="8dp" >

    <TextView
        android:id="@+id/tv_number"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="13956912345"
        android:textColor="@color/green_home"
        android:textSize="22sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/grey_1" />

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="套餐种类:"
            android:textColor="@color/green_home" />

        <TextView
            android:id="@+id/tv_taocan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="移动网聊套餐-40A"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/grey_1" />

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="套餐简介:"
            android:textColor="@color/green_home" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:maxLines="3"
            android:text="1、月基本费40元，包含国内点对点（含网内、网间）和梦网上行短信500条、国内移动数据流量200MB、 省内移动数据流量200MB、来电显示、飞信、139邮箱（免费版）和139社区、安徽省内大学校园WLAN(网络标识CMCC-EDU)上网时长10小时；2、校园优惠区域内本地主叫国内（含IP17951方式）0.10元/分钟。校园优惠区域外：国内语音主叫国内电话0.25元/分钟；3、本地被叫免费"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/grey_1" />

</LinearLayout>